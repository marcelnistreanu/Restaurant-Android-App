<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/ordersCardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/orderConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/btn_box"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: "
                android:textSize="26sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/textView3" android:layout_marginStart="12dp">

        </TextView>
        <TextView
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:text="123"
                android:textSize="26sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginStart="5dp" android:id="@+id/orderIdTextView">

        </TextView>

        <LinearLayout
                android:id="@+id/layout_status"
                android:layout_width="146dp"
                android:layout_height="38dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/orderIdTextView"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_status" android:layout_marginStart="16dp">

            <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREPARING"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" tools:layout_editor_absoluteX="194dp"
                    tools:layout_editor_absoluteY="34dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="18dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/arrow_button"
                android:layout_width="58dp"
                      android:layout_height="52dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintLeft_toRightOf="@id/layout_status"
                      android:clickable="true"
                      android:contentDescription="Button to expand"
                      android:layout_marginTop="16dp">

            <ImageView
                    android:id="@+id/arrow_image"
                    android:layout_width="38dp"
                    android:layout_height="35dp"
                    android:src="@drawable/arrow_down_24"
                    tools:layout_editor_absoluteY="31dp" tools:layout_editor_absoluteX="341dp"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="15dp" android:layout_marginLeft="10dp">

            </ImageView>


        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exapandableLayout"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_status"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="12dp">

            <!--            <androidx.recyclerview.widget.RecyclerView-->
            <!--                    android:layout_width="376dp"-->
            <!--                    android:layout_height="127dp" tools:layout_editor_absoluteY="1dp"-->
            <!--                    tools:layout_editor_absoluteX="1dp"-->
            <!--                    app:layout_constraintTop_toTopOf="@id/exapandableLayout"-->
            <!--                    app:layout_constraintLeft_toLeftOf="@id/exapandableLayout"-->
            <!--                    app:layout_constraintRight_toRightOf="@id/exapandableLayout"/>-->
            <ListView
                    android:id="@+id/listView"
                    android:layout_width="390dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/exapandableLayout"
                    app:layout_constraintLeft_toLeftOf="@id/exapandableLayout"
                    app:layout_constraintRight_toRightOf="@id/exapandableLayout"
                    android:divider="@color/white"
                    android:dividerHeight="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintHorizontal_bias="0.0">

            </ListView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>